\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{timozerfont}[2018/01/21 v0.3 Provide Chinese Environment]

\RequirePackage{fontspec}
\RequirePackage{xeCJK}
%\RequirePackage{indentfirst}


%------------- Fonts Settings -------------
\defaultfontfeatures{Path = fonts/cn/, Mapping = tex-text}

%------------- Fonts Define ---------------
% if you want to use more fonts, please do it like blow
% \newCJKfontfamily[family]\cmd{font.file}
\newCJKfontfamily[CourierNew]\CNF{CourierNew.ttf}
\newCJKfontfamily[SmallCaps]\SCF{SmallCaps.otf}
\newCJKfontfamily[TimesNewRoman]\TNRF{TimesNewRomanRegular.ttf}
\newCJKfontfamily[TimesNewRomanBold]\TNRBF{TimesNewRomanBold.ttf}
\newCJKfontfamily[TimesNewRomanItalic]\TNRIF{TimesNewRomanItalic.ttf}
\newCJKfontfamily[HiraginoSansGB-W3]\dqhei{HiraginoSansGB-W3.ttf}

%------------- Chinese Fonts  -------------
\setCJKmainfont[
    BoldFont=HiraginoSansGB-W6.ttf,
    ItalicFont=HiraginoSansGB-W3.ttf,
    SmallCapsFont=HiraginoSansGB-W3.ttf,
    ]{fzss.ttf}    % 设置正文罗马族字体 \rmfamily \textrm
\setCJKsansfont{HiraginoSansGB-W3.ttf}   % 设置正文无衬线族字体 \sffamily \textsf
\setCJKmonofont{HiraginoSansGB-W3.ttf}  % 设置正文等宽字体 \ttfamily \texttt

%------------- English Fonts  -------------
\setmainfont[
    BoldFont=TimesNewRomanBold,
    ItalicFont=TimesNewRomanItalic
]{TimesNewRomanRegular}
